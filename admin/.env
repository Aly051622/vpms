<?php
require_once __DIR__ . '/vendor/autoload.php';  // Load Composer's autoloader

use Dotenv\Dotenv;

// Load the .env file from the project directory
$dotenv = Dotenv::createImmutable(__DIR__);
$dotenv->load();  // This loads the .env file and makes variables accessible

// Fetch the encryption key from the .env file
$encryptionKey = getenv('ENCRYPTION_KEY');

if (!$encryptionKey) {
    die("Encryption key not set in environment variables.");
}

// You can now use the encryption key for encryption and decryption
echo "Encryption Key Loaded: " . $encryptionKey;
